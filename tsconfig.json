{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
        "diagnostics": true,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "lib": ["es5", "es6", "dom"]
    },
    "target": "ES5",
    "module": "ES6",
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules"
    ]
}